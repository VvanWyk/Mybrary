<div>
    <label for title="title">Title</label>
    <input type="text" name="title" value="<%= book.title %>" />
</div>
<div>
    <label for title="author">Author</label>
    <select name="author">
        <option></option>
        <% authors.forEach(author => { if (author.id == book.author) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>"></option>
        <% }}) %>
    </select>
</div>
<div>
    <label for title="publishedDate">Published Date</label>
    <input type="date" name="publishedDate" value="<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split("T")[0] %>" />
</div>
<div>
    <label for title="pageCount">Page Count</label>
    <input type="number" name="pageCount" value="<%= book.pageCount %>" min="1" />
</div>
<div>
    <label for title="title">Cover</label>
    <input type="file" name="cover" class="filepond" />
</div>
<div>
    <label for title="description">Description</label>
    <textarea name="description"><%= book.description %></textarea>
</div>
